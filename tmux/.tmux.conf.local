# Smart pane switching with awareness of Vim/Neovim splits.
# Specific regex to detect only vim and neovim processes
is_vim="ps -o state= -o comm= -t '#{pane_tty}' | grep -iqE '^[^TXZ ]+ +(\\S+\\/)?((n?vim|vim|view|nvim|vimdiff|nvimdiff)(diff)?)$'"

# Smart pane switching with awareness of Vim/Neovim splits.
# Navigate left - send to vim if vim is running, otherwise navigate panes
bind -n 'C-h' if-shell "$is_vim" 'send-keys C-h' 'select-pane -L'

# Navigate down - send to vim if vim is running, otherwise navigate panes
bind -n 'C-j' if-shell "$is_vim" 'send-keys C-j' 'select-pane -D'

# Navigate up - send to vim if vim is running, otherwise navigate panes
bind -n 'C-k' if-shell "$is_vim" 'send-keys C-k' 'select-pane -U'

# Navigate right - send to vim if vim is running, otherwise navigate panes
bind -n 'C-l' if-shell "$is_vim" 'send-keys C-l' 'select-pane -R'

