#-------------------------------------------------------------------------------
# --- NOTE: Layout Mode - Pane Buffer Editing {{{
#           Edit pane scrollback history in Neovim.
#-------------------------------------------------------------------------------

# Capture visible scrollback
bind -T layout-mode e run "
  f=\$(mktemp /tmp/tmux-edit.XXXXXX) && \
  tmux capture-pane -S 0 -p -J > \$f && \
  tmux new-window \
    -n 'hist-#{session_name}:#{window_index}.#{pane_index}' \
    \"sh -c 'trap \\\"rm -f \$f\\\" EXIT; nvim \$f'\"
"

# Capture full scrollback
bind -T layout-mode E run "
  f=\$(mktemp /tmp/tmux-edit.XXXXXX) && \
  tmux capture-pane -S - -p -J > \$f && \
  tmux new-window \
    -n 'hist-#{session_name}:#{window_index}.#{pane_index}' \
    \"sh -c 'trap \\\"rm -f \$f\\\" EXIT; nvim \$f'\"
"

