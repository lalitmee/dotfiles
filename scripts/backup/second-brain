#!/bin/bash

REPO_DIR="$HOME/Desktop/Github/second-brain"

cd "$REPO_DIR" || {
  echo "âŒ Failed to cd into $REPO_DIR"
  exit 1
}

# Print timestamp inside this script for clarity (it also goes to the main log)
echo "ğŸ“¦ Backup attempt at: $(date '+%Y-%m-%d %H:%M:%S')"

# Pull latest changes first
git pull --rebase

# Only commit if there are actual changes
if ! git diff --quiet || ! git diff --cached --quiet; then
  git add .
  git commit -m "auto: backup changes on $(date '+%Y-%m-%d %H:%M:%S')"
  git push
  echo "âœ… Backup committed and pushed"
else
  echo "âœ… No changes to commit"
fi
