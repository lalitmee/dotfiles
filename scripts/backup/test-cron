{
  echo "------------------------------------------------------------"
  echo "ðŸ§ª Git test at: $(date)"
  echo "ðŸ” USER: $(whoami)"
  echo "ðŸ“ Attempting to cd into: $REPO"

  if cd "$REPO" 2>/dev/null; then
    echo "âœ… Successfully cd'ed into $REPO"
    echo "ðŸ“‚ Current directory: $(pwd)"

    echo "ðŸ”„ git status output:"
