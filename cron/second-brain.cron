# ğŸ§  Backup personal second-brain every hour
0 * * * * /bin/bash ~/dotfiles/scripts/backup/second-brain >> ~/dotfiles/scripts/logs/second-brain.log 2>&1

# ğŸ” Rotate logs weekly
@weekly mv ~/dotfiles/scripts/logs/second-brain.log ~/dotfiles/scripts/logs/second-brain-$(date +\%F).log && touch ~/dotfiles/scripts/logs/second-brain.log

# ğŸ§¹ Cleanup logs older than 30 days
@monthly find ~/dotfiles/scripts/logs -name "second-brain-*.log" -mtime +30 -delete
