#-------------------------------------------------------------------------------
# NOTE: audio {{{
#-------------------------------------------------------------------------------
XF86AudioPlay
    playerctl play-pause

ctrl + alt + p
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

ctrl + shift + period
    playerctl next

ctrl + shift + comma
    playerctl previous

XF86AudioStop
    playerctl stop

alt + {h,j,k,l}
   mpc {prev,next,play,pause}
#}}}
#-------------------------------------------------------------------------------

#-------------------------------------------------------------------------------
# NOTE: i3 {{{
#-------------------------------------------------------------------------------

#-------------------------------------------------------------------------------
# NOTE: workspaces {{{
#-------------------------------------------------------------------------------
super + {1-9,0}
    i3-msg workspace {1-9,10}

super + shift + {1-9,0}
    i3-msg move container to workspace {1-9,10}

control + {1-9}
    i3-msg workspace {11,12,13,14,15,16,17,18,19}

control + shift + {1-9}
    i3-msg move container to workspace {11,12,13,14,15,16,17,18,19}

super + ctrl + {h,j,k,l}
    i3-msg move workspace to output {left, down, up, right}

super + ctrl + {Left,Down,Up,Right}
    i3-msg move workspace to output {left, down, up, right}


#}}}
#-------------------------------------------------------------------------------

#-------------------------------------------------------------------------------
# reload
#-------------------------------------------------------------------------------
super + shift + c
    i3-msg reload

super + shift + r
    i3-msg restart

super + shift + e
    i3-msg exit

super + q
    i3-msg kill

super + shift + period
    systemctl suspend

super + shift + x
    lockscreen

#-------------------------------------------------------------------------------
# toggle layouts
#-------------------------------------------------------------------------------
super + f
    i3-msg fullscreen toggle

super + backslash
    i3-msg splith

super + minus
    i3-msg splitv

super + e
    i3-msg layout toggle splith splitv tabbed stacking

super + space
    i3-msg focus mode_toggle

super + shift + space
    i3fyra --float

super + z
    i3zen --workspace zen

super + shift + z
    workspace zen

#-------------------------------------------------------------------------------
# NOTE: windows {{{
#-------------------------------------------------------------------------------
super + {h,j,k,l}
    i3viswiz {left,down,up,right}

super + {Left,Down,Up,Right}
    i3viswiz {left,down,up,right}

super + shift + {h,j,k,l}
    i3flip --move {left,down,up,right}

super + shift + {Left,Down,Up,Right}
    i3flip --move {left,down,up,right}

super + Tab
    i3flip next

super + Shift + Tab
    i3flip prev

# Alt_L + Tab
#     workspaces back_and_forth

super + ctrl + shift + h
    i3Kornhe size --speed 50 left

super + ctrl + shift + j
    i3Kornhe size --speed 50 down

super + ctrl + shift + k
    i3Kornhe size --speed 50 up

super + ctrl + shift + l
    i3Kornhe size --speed 50 right
#}}}
#-------------------------------------------------------------------------------

#-------------------------------------------------------------------------------
# NOTE: gaps {{{
#-------------------------------------------------------------------------------
alt + o
    i3-msg gaps inner current plus 5

alt + i
    i3-msg gaps inner current minus 5

alt + u
    i3-msg gaps outer current plus 5

alt + y
    i3-msg gaps outer current minus 5
#}}}
