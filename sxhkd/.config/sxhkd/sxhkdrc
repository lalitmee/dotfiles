#-------------------------------------------------------------------------------
# NOTE: audio {{{
#-------------------------------------------------------------------------------
XF86AudioPlay
    playerctl play-pause

ctrl + alt + p
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

ctrl + shift + period
    playerctl next

ctrl + shift + comma
    playerctl previous

XF86AudioStop
    playerctl stop

alt + {h,j,k,l}
   mpc {prev,next,play,pause}
#}}}
#-------------------------------------------------------------------------------

#-------------------------------------------------------------------------------
# NOTE: i3 {{{
#-------------------------------------------------------------------------------

#-------------------------------------------------------------------------------
# NOTE: workspaces {{{
#-------------------------------------------------------------------------------
super + {1-9,0}
    i3-msg workspace {1-9,10}

control + {1-9}
    i3-msg workspace {11,12,13,14,15,16,17,18,19}

super + shift + {1-9,0}
    i3-msg move container to workspace {1-9,0}

control + shift + {1-9}
    i3-msg move container to workspace {11,12,13,14,15,16,17,18,19}

#}}}
#-------------------------------------------------------------------------------

#-------------------------------------------------------------------------------
# reload
#-------------------------------------------------------------------------------
super + shift + c
    i3-msg reload

super + shift + r
    i3-msg restart

super + shift + e
    i3-msg exit

super + q
    i3-msg kill

super + shift + period
    systemctl suspend

super + shift + x
    i3lock

#-------------------------------------------------------------------------------
# toggle layouts
#-------------------------------------------------------------------------------
super + f
    i3-msg fullscreen toggle

super + e
    i3-msg layout toggle splith splitv tabbed stacking

super + space
    i3-msg focus mode_toggle

super + shift + space
    i3fyra --float

super + z
    i3zen --workspace zen

super + shift + z
    workspace zen

#-------------------------------------------------------------------------------
# NOTE: windows {{{
#-------------------------------------------------------------------------------
super + {h,j,k,l}
    i3viswiz {left,down,up,right}

super + shift + {h,j,k,l}
    i3flip --move {left,down,up,right}

super + Tab
    i3flip next

super + Shift + Tab
    i3flip prev

# Alt_L + Tab
#     workspaces back_and_forth

super + ctrl + h
    i3-msg resize grow width 4 px or 4 ppt

super + ctrl + j
    i3-msg resize shrink height 4 px or 4 ppt

super + ctrl + k
    i3-msg resize grow height 4 px or 4 ppt

super + ctrl + l
    i3-msg resize shrink width 4 px or 4 ppt
#}}}
#-------------------------------------------------------------------------------

#-------------------------------------------------------------------------------
# NOTE: gaps {{{
#-------------------------------------------------------------------------------
alt + o
    i3-msg gaps inner current plus 5

alt + i
    i3-msg gaps inner current minus 5

alt + u
    i3-msg gaps outer current plus 5

alt + y
    i3-msg gaps outer current minus 5
#}}}
