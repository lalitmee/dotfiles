super + Escape
    pkill -USR1 -x sxhkd

super + Return
   kitty

super + shift + Return
    nemo

#-------------------------------------------------------------------------------
# NOTE: rofi/dmenu {{{
#-------------------------------------------------------------------------------
super + d
   dmenu_run

super + o
    rofi -show drun -show-icons -font "CaskaydiaCove Nerd Font 13"

super + c
  clipmenu

alt + p
    rofi -show
#}}}
