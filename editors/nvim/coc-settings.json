{
  "python.jediEnabled": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "graphql",
    "graphql",
    "html",
    "javascript",
    "javascript",
    "javascriptreact",
    "json",
    "json",
    "markdown",
    "python",
    "typescript",
    "typescript.tsx",
    "typescriptreact",
    "yaml",
    "vim"
  ],
  "eslint.enable": true,
  "eslint.autoFixOnSave": false,
  "eslint.filetypes": ["javascript", "typescript", "javascriptreact"],
  // suggestions
  // "suggest.echodocSupport": true,
  // TODO add more labels and give them cool glyphs
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": "f"
  },

  // diagnostics
  "diagnostic.errorSign": "✗",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",
  // "diagnostic.displayByAle": true,

  // codelens TODO what does this get me?
  // "codeLens.enable": true,

  // list
  "list.indicator": ">",
  "list.selectedSignText": " ",

  // autoformat
  "coc.preferences.hoverTarget": "float",

  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  // snippets
  "snippets.userSnippetsDirectory": "~/.config/nvim/utils/snips",

  // emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  // Prettier Settings
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",
  "prettier.trailingComma": "all",

  // Git Settings
  "git.enableGutters": false,

  // explorer settings
  "explorer.icon.enableNerdfont": true,
  "cSpell.userWords": [
    "Bracey",
    "Cfind",
    "Clocate",
    "Farr",
    "Gdiffsplit",
    "Gonvim",
    "Goyo",
    "Gstatus",
    "Lfind",
    "Llocate",
    "Magit",
    "Rnvimr",
    "Startify",
    "floaterm",
    "funcobj",
    "goneovim",
    "mygroup",
    "ncdu",
    "pyright",
    "rgnvim",
    "ytop"
  ]
}
