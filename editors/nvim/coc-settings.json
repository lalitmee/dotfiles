{
  "javascript.suggestionActions.enabled": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "graphql",
    "graphql",
    "html",
    "javascript",
    "javascript",
    "javascriptreact",
    "json",
    "json",
    "lua",
    "markdown",
    "python",
    "typescript",
    "typescript.tsx",
    "typescriptreact",
    "vim",
    "yaml"
  ],

  // autoformat
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,

  // eslint
  "eslint.autoFixOnSave": false,

  // suggestions
  // "suggest.echodocSupport": true,
  "suggest.enablePreview": true,
  "suggest.labelMaxLength": 50,
  "suggest.removeDuplicateItems": true,
  "suggest.completionItemKindLabels": {
    "method": " ƒ ",
    "function": "  ",
    "variable": "",
    "field": "  ",
    "typeParameter": "⅀",
    "constant": "  ",
    "class": "  ",
    "interface": " ﰮ",
    "struct": "  ",
    "event": "  ",
    "operator": " ○ ",
    "module": "  ",
    "property": "  ",
    "enum": " 了",
    "reference": "  ",
    "keyword": "  ",
    "file": "  ",
    "folder": "  ",
    "color": "  ",
    "unit": "  ",
    "snippet": " ﬌ ",
    "text": "  ",
    "constructor": "  ",
    "value": "  ",
    "enumMember": "  ",
    "default": "  "
  },
  "suggest.noselect": false,
  "snippets.priority": 1,
  "coc.source.file.priority": 2,
  "coc.source.around.priority": 3,
  "coc.source.buffer.priority": 4,

  // diagnostics
  "diagnostic.errorSign": "E",
  "diagnostic.warningSign": "W",
  "diagnostic.infoSign": "I",
  "diagnostic.hintSign": "H ",
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.enableMessage": "never",
  "diagnostic.messageTarget": "echo",
  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "  ■  ",
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,

  // codelens TODO what does this get me?
  // "codeLens.enable": true,

  // list
  "list.indicator": ">",
  "list.selectedSignText": " ",
  "list.height": 30,
  // "list.source.files.command": "rg",
  "list.source.files.args": ["--hidden", "--files"],
  "list.source.files.excludePatterns": [
    "**/.git/*",
    "/tmp/*",
    "**/lua-language-server/*"
  ],
  "list.source.grep.excludePatterns": ["**/.git/*", "/tmp/*"],

  // python config
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.stubPath": "typings",
  "python.analysis.typeshedPaths": [],
  "python.analysis.diagnosticSeverityOverrides": {},
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.useLibraryCodeForTypes": true,
  "python.pythonPath": "python",
  "python.venvPath": "",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.local/bin/black",
  "python.formatting.blackArgs": [],
  "python.formatting.autopep8Path": "autopep8",
  "python.formatting.autopep8Args": [],
  "python.formatting.yapfPath": "yapf",
  "python.formatting.yapfArgs": [],
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": false,
  "python.linting.banditEnabled": false,
  "python.linting.mypyEnabled": false,
  "python.linting.pytypeEnabled": false,
  "python.linting.prospectorEnabled": false,
  "python.linting.pydocstyleEnabled": false,
  "python.linting.pylamaEnabled": false,
  "python.linting.pylintEnabled": false,

  // snippets
  "snippets.userSnippetsDirectory": "~/.config/nvim/UltiSnips",

  // emmet
  "emmet.includeLanguages": {
    "javascript": "javascript",
    "javascriptreact": "javascriptreact",
    "html": "html",
    "css": "css"
  },

  // Prettier Settings
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",
  "prettier.trailingComma": "all",

  // Lua language server settings
  "lua.enable": true,
  "Lua.hint.enable": true,
  "Lua.diagnostics.globals": [
    "vim",
    "describe",
    "it",
    "before_each",
    "after_each",
    "awesome",
    "theme",
    "client"
  ],
  "Lua.workspace.preloadFileSize": 1000,

  // sessions
  "session.directory": "~/.local/share/nvim/sessions"
}
