" commit title limit
let g:magit_commit_title_limit = 50

" delete untracted files on unstaging
let g:magit_discard_untracked_do_delete = 1

" disable default open fold of files
let g:magit_default_fold_level = 1

" disable default open fold when file changes
let g:magit_auto_foldopen = 0

" auto close magit buffer if there is nothing to stage
let g:magit_auto_close = 1
