snippet loc "local variable declaration"
local ${1:var} = ${2:value}
endsnippet

snippet cmd "Add Command"
command {
  '${1:COMMAND}',
  function()
    ${2:function_body}
  end
}
endsnippet

snippet cbox "config comment box"
----------------------------------------------------------------------
-- NOTE: ${1:description} {{{
----------------------------------------------------------------------
$0
-- }}}
----------------------------------------------------------------------
endsnippet

snippet fdm "fold method marker comment"
-- vim:foldmethod=marker
endsnippet

# vim:ft=snippets:
