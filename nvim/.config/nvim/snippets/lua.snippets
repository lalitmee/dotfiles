snippet cmd "Add Command"
  command("${1:command}", function()
    ${2: -- body}
  end, { ${3:args}})
  $0

snippet cbox "comment box with fold marker"
  ----------------------------------------------------------------------
  -- NOTE: ${1:description} {{{
  ----------------------------------------------------------------------
  -- }}}
  ----------------------------------------------------------------------
  $0

snippet fdm "fold method marker comment"
  -- vim:foldmethod=marker
  $0
