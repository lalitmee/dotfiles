{
  "model": {
    "name": "gemini-2.5-pro"
  },
  "general": {
    "preferredEditor": "nvim",
    "vimMode": true,
    "autoUpdate": true,
    "checkpointing": {
      "enabled": true
    }
  },
  "ui": {
    "theme": "Default",
    "hideBanner": true,
    "hideTips": true,
    "showMemoryUsage": true
  },
  "ide": {
    "enabled": true
  },
  "tools": {
    "allowed": [
      "run_shell_command(git diff --staged)",
      "run_shell_command(git status --porcelain)",
      "run_shell_command(git diff)",
      "run_shell_command(git ls-files --others --exclude-standard)"
    ]
  },
  "mcp": {
    "allowed": [
      "time",
      "filesystem",
      "fetch",
      "memory",
      "git",
      "github",
      "context7",
      "sequential-thinking",
      "mcp-sequentialthinking-tools",
      "crash",
      "chrome-devtools",
      "figma-local-mcp",
      "server-sequential-thinking",
      "todowrite"
    ]
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "context": {
    "fileName": [
      "CONTEXT.md",
      "GEMINI.md"
    ]
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "DEFAULT_MINIMUM_TOKENS": "6000"
      }
    },
    "server-sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "crash": {
      "command": "npx",
      "args": [
        "-y",
        "crash-mcp"
      ]
    },
    "figma-local-mcp": {
      "httpUrl": "http://127.0.0.1:3845/mcp"
    }
  }
}
