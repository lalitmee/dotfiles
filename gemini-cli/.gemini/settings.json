{
  "useWriteTodos": true,
  "model": {
    "name": "gemini-2.5-pro"
  },
  "general": {
    "preferredEditor": "nvim",
    "vimMode": true,
    "disableAutoUpdate": true,
    "enablePromptCompletion": true,
    "checkpointing": {
      "enabled": true
    }
  },
  "ui": {
    "theme": "Default",
    "hideBanner": true,
    "hideTips": true
  },
  "ide": {
    "enabled": true
  },
  "tools": {
    "shell": {
      "enableInteractiveShell": true
    },
    "autoAccept": true,
    "allowed": [
      "run_shell_command(pwd)",
      "run_shell_command(ls)",
      "run_shell_command(cat)",
      "run_shell_command(date)",

      "run_shell_command(zsh -n)",
      "run_shell_command(chmod +x)",

      "run_shell_command(gemini-cli prompt)",

      "run_shell_command(git add)",
      "run_shell_command(git diff)",
      "run_shell_command(git status)",

      "run_shell_command(node)",
      "run_shell_command(npm)",
      "run_shell_command(yarn)",
      "run_shell_command(npx)"
    ]
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "context": {
    "fileName": [
      "GEMINI.md",
      "AGENTS.md",
      "CONTEXT.md"
    ]
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "DEFAULT_MINIMUM_TOKENS": "6000"
      }
    },
    "server-sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "crash": {
      "command": "npx",
      "args": [
        "-y",
        "crash-mcp"
      ]
    },
    "figma-local-mcp": {
      "httpUrl": "http://127.0.0.1:3845/mcp"
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest"
      ]
    }
  },
  "inactiveMcpServers": {
    "time": {
      "command": "uvx",
      "args": [
        "mcp-server-time"
      ]
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "~/Projects/"
      ],
      "trust": true
    },
    "fetch": {
      "command": "uvx",
      "args": [
        "mcp-server-fetch"
      ]
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ]
    },
    "git": {
      "command": "uvx",
      "args": [
        "mcp-server-git",
        "--repository",
        "."
      ],
      "trust": true
    },
    "github": {
      "httpUrl": "https://api.githubcopilot.com/mcp/",
      "trust": true,
      "headers": {
        "Authorization": "Bearer $GITHUB_PERSONAL_ACCESS_TOKEN"
      }
    },
    "sequential-thinking": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/arben-adm/mcp-sequential-thinking",
        "--with",
        "portalocker",
        "mcp-sequential-thinking"
      ]
    },
    "mcp-sequentialthinking-tools": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-sequentialthinking-tools"
      ],
      "env": {
        "MAX_HISTORY_SIZE": "1000"
      }
    },
    "chrome-devtools": {
      "command": "npx",
      "args": [
        "-y",
        "chrome-devtools-mcp@latest"
      ]
    }
  }
}
