{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "grok-code-fast-1",
  "autoshare": false,
  "autoupdate": true,
  "tui": {
    "scroll_speed": 5,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "environment": {
        "DEFAULT_MINIMUM_TOKENS": "6000"
      }
    },
    "crash": {
      "type": "local",
      "command": ["npx", "-y", "crash-mcp"]
    },
    "chrome-devtools": {
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "type": "local"
    },
    "playwright": {
      "command": ["npx", "-y", "@playwright/mcp@latest", "--extension"],
      "type": "local",
      "environment": {
        "PLAYWRIGHT_MCP_EXTENSION_TOKEN": "IcM0jpMA4K5j3CMCn_lDqJirqRqei8OGUbqwgSyqs5U"
      }
    }
  }
}
